<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	
	<!-- DB 접속 정보 -->
	<bean id="dataSourceSpied" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="username" value="scott"/>
		<property name="password" value="tiger"/>
	</bean>
	
	<!-- JDBC Logger -->
	<bean id="dataSource" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">
		<constructor-arg ref="dataSourceSpied"/>
		<property name="logFormatter">
			<bean class="net.sf.log4jdbc.tools.Log4JdbcCustomFormatter">
				<property name="loggingType" value="MULTI_LINE"/>
				<property name="sqlPrefix" value="SQL:::"/>
			</bean>
		</property>
	</bean>
	
	<!-- MyBatis 수행 객체 (SqlSession) -->
	<bean id="SqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="configLocation" value="classpath:mybatis-config.xml"/>
<!-- 		<property name="mapperLocations" value="classpath:/mappers/**/*Mapper.xml"/> -->
		<!-- ** : 폴더구조까지 포함 -->
		<property name="mapperLocations" value="classpath:/zaksim/dao/*DaoImpl.xml"/>
	</bean>
	
	<!-- MyBatis 인터페이스 생성 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="zaksim.dao"/>
	</bean>
	
	<!-- SMTP 설정 -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<!-- 보안설정 : TLS -->
		<property name="port" value="587" />
		<!-- 보안설정 : SSL -->
<!-- 		<property name="port" value="465" /> -->
		<property name="username" value="kmh.finaltest@gmail.com" />
		<property name="password" value="zaksim/1119" />
		<property name="javaMailProperties">
			<props>
				<!-- 사용자 인증 -->
				<prop key="mail.smtp.auth">true</prop>
				<!-- STARTTLS 명령을 사용하여 TLS로 연결 전환 -->
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>
		
</beans>
